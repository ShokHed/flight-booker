<%= simple_form_for booking do |f| %>
    <%= f.hidden_field :number_of_passengers, value: params[:number_of_passengers] %>
    <%= f.hidden_field :flight_id, value: params[:flight_id] %>
    
    <%= f.simple_fields_for :passengers do |p| %>
        <%= p.input :name %>
        <%= p.input :email %>
    <% end %>

    <%= f.submit "Submit" %>
<% end %>
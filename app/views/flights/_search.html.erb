<% if notice %>
    <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
    <p class="alert alert-danger"><%= alert %></p>
<% end %>

<% form_with method: :get, url: '/flights' do |f| %>
  <% if event.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>
        <% event.errors.each do |error| %>
          <ul>
            <li><%= error.full_message %></li>
          </ul>
        <% end %>
    </div>
  <% end %>

  <%= f.label :origin %>
  <%= f.collection_select(:origin, @airports, :id, :name, {prompt: 'Select origin airport'}, requied: true) %>
  <%# <% f.collection_select :origin, @airports, :code, :name, { include_blank: 'Select Airport', selected: params[:destination] }, required: true %> %>
<% end %>